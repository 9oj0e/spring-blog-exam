{{> layout/header}}

<div class="container p-5">
    <div class="card">
        <div class="card-header"><b>익명 글쓰기 화면입니다</b></div>
        <div class="card-body">
            <form action="/board/save" method="post">
                <div>
                    <h6>작성자</h6>
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter author" name="author" autocomplete="off" required>
                </div>
                <div>
                    <h6>제목</h6>
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter title" name="title" autocomplete="off" required>
                </div>
                <div>
                    <h6>내용</h6>
                </div>
                <div class="mb-3">
                    <textarea class="form-control" rows="5" placeholder="게시글 작성.." name="content"></textarea>
                </div>
                <button type="submit" class="btn btn-primary form-control">글쓰기완료</button>
            </form>
        </div>
    </div>
</div>

{{> layout/footer}}